<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="shortcut icon" href="/static/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/static/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="{{ '/static/style.css' | url }}">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>   
    <nav>
      <div class="l-container">
        <div class="nav-inner">
          <a href="/">
            <img src="/static/img/Logo.png" alt="Sherpa" />
          </a>
          <ul class="nav-links">        
            <li><a href="#features" class="button">What is Sherpa?</a></li>      
            <li><a href="#about" class="button">About</a></li>
            <li><a href="https://nuom.us10.list-manage.com/subscribe/post?u=246bdd8043b629a123728cfe5&id=3477d6d0b2" class="button button-primary">Join Sherpa</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>
    <footer>
      <div class="l-container">
        <small>&copy; 2020. Built by nuom </small>
        <a href="#">Privacy Policy</a>
      </div>
    </footer>    
    <script src="{{ '/static/main.js' | url }}"></script>   
  </body>
</html>